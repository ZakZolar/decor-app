@{
    ViewBag.Title = "Delivery Address | Soul Template";
    ViewBag.PageTitle = "CHECKOUT";
}
<div class="container page-wrap">
    <div class="row wiwet-checkout-steps">
        <div class="col-xs-4 fadeUpEffect">
            <a href="@Url.Action("CheckoutInformation", "Cart")">
                <div class="row">
                    <div class="col-sm-2"><span>1</span></div>
                    <div class="col-sm-10">
                        <p>CHECKOUT<br />INFORMATION</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xs-4 fadeUpEffect1 wait05s active">
            <div class="row">
                <div class="col-sm-2"><span>2</span></div>
                <div class="col-sm-10">
                    <p>DELIVERY<br />ADDRESS</p>
                </div>
            </div>
        </div>

        <div class="col-xs-4 fadeUpEffect2 wait07s">
            <a href="@Url.Action("PaymentInformation", "Cart")">
                <div class="row">
                    <div class="col-sm-2"><span>3</span></div>
                    <div class="col-sm-10">
                        <p>PAYMENT<br />INFORMATION</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

    <form class="wiwet-checkout fadeUpEffect3 wait09s">
        <input type="text" placeholder="Address*" />
        <input type="text" placeholder="Address part 2" />

        <div class="row">
            <div class="col-sm-6">
                <select class="selectpicker wiwet-select">
                    <option>City*</option>
                    <option>London</option>
                    <option>Paris</option>
                    <option>Bucharest</option>
                    <option>Viena</option>
                    <option>Moscow</option>
                    <option>Tokyo</option>
                    <option>Sidney</option>
                    <option>New York</option>
                    <option>Los Angeles</option>
                </select>

            </div>
            <div class="col-sm-6">
                <select class="selectpicker wiwet-select">
                    <option>State*</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                    <option>Option 4</option>
                    <option>Option 5</option>
                </select>

            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <input type="text" placeholder="ZIP / POSTAL CODE*" />
            </div>
            <div class="col-sm-8">
                <select class="selectpicker wiwet-select">
                    <option>COUNTRY*</option>
                    <option>USA</option>
                    <option>England</option>
                    <option>Italy</option>
                    <option>Germany</option>
                    <option>Japan</option>
                    <option>Canada</option>
                </select>
            </div>
        </div>



        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <a href="@Url.Action("PaymentInformation", "Cart")" class="button">NEXT</a>
            </div>
        </div>

    </form>

</div>