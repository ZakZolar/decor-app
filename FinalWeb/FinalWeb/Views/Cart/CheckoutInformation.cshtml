@{
    ViewBag.Title = "Checkout Information | Soul Template";
    ViewBag.PageTitle = "CHECKOUT";
}
<div class="container page-wrap">
    <div class="row wiwet-checkout-steps">
        <div class="col-xs-4 fadeUpEffect active">
            <div class="row">
                <div class="col-sm-2"><span>1</span></div>
                <div class="col-sm-10">
                    <p>CHECKOUT<br />INFORMATION</p>
                </div>
            </div>
        </div>

        <div class="col-xs-4 fadeUpEffect1 wait05s">
            <a href="@Url.Action("DeliveryAddress", "Cart")">
                <div class="row">
                    <div class="col-sm-2"><span>2</span></div>
                    <div class="col-sm-10">
                        <p>DELIVERY<br />ADDRESS</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xs-4 fadeUpEffect2 wait07s">
            <a href="@Url.Action("PaymentInformation", "Cart")">
                <div class="row">
                    <div class="col-sm-2"><span>3</span></div>
                    <div class="col-sm-10">
                        <p>PAYMENT<br />INFORMATION</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

    <form class="wiwet-checkout fadeUpEffect3 wait09s">
        <div class="row">
            <div class="col-sm-6">
                <input type="text" placeholder="First Name*" />
            </div>
            <div class="col-sm-6">
                <input type="text" placeholder="Last Name*" />
            </div>
        </div>
        <input type="text" placeholder="Email*" />
        <input type="text" placeholder="Company Name" />
        <input type="text" placeholder="Phone N&deg;*" />
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <a href="@Url.Action("DeliveryAddress", "Cart")" class="button">NEXT</a>
            </div>
        </div>

    </form>
</div>