
@{
    Layout = "~/Views/_SellerLayout.cshtml";
}

<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>

                                @using (Html.BeginForm("Login", "ForSellerAccount", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Username or Email address<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username">
                                    <label for="">Password<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password">
                                    <button type="submit" class="aa-browse-btn" style="background-color:black">Login</button>
                                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                                    <p class="aa-lost-password"><a href="#">Forgot your password?</a></p>
                                }

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Register</h4>
                                @using (Html.BeginForm("Register", "ForSellerAccount", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">First Name<span>*</span></label>
                                    <input name="First_Name" type="text" required placeholder="Enter first name">

                                    <label for="">Last Name<span>*</span></label>
                                    <input name="Last_Name" type="text" required placeholder="Enter last name">

                                    <label for="">Username<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username">

                                    <label for="">Password<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password">

                                    <label for="">Email<span>*</span></label>
                                    <input name="Email" type="text" required placeholder="Enter your email">

                                    <label for="">Mobile<span>*</span></label>
                                    <input name="Mobile1" type="text" required placeholder="Mobile">

                                    <label for="">Address<span></span></label>
                                    <input name="Address1" type="text" required placeholder="Address">

                                    <button type="submit" class="aa-browse-btn" style="background-color:black">Register</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


