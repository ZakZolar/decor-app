@model FinalWeb.Models.admin_Login

@{
    Layout = "~/Views/_AdminLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login-Decor</title>

    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/bootstrap-rtl.css")
    @Styles.Render("~/Content/css/bootstrap-rtl.min.css")
    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/sb-admin-rtl.css")
    @Styles.Render("~/Content/css/sb-admin.css")
    @Styles.Render("~/Content/css/plugins/morris.css")
    
    <link href="~/Content/Fonts/glyphicons-halflings-regular.eot" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Fonts/glyphicons-halflings-regular.svg" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Fonts/glyphicons-halflings-regular.ttf" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Fonts/glyphicons-halflings-regular.woff" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Fonts/glyphicons-halflings-regular.woff2" rel="stylesheet" type="text/css"/>
    
    <style>
        .adminHeading {
            font-size: 36px;
    margin-left: 450px;
    color: white;
    margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "admin_Login", FormMethod.Post, new { @id = "loginForm" }))
        { 
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
    <h1 class="adminHeading">Admin Panel</h1>
        <div class="row col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Login To Your Account
                </div><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="panel-body">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @name = "username", @placeholder = "Username" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger " })   
                    
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>                       
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @name = "password",@type="password", @placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 col-xs-6">
                            <div class="checkbox ">
                                <label>
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-6">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" id="btn-login" class="btn btn-success">Login</button>
                                    
                                </div><br /><br />
                                <div class="pull-right">
                                    <a href="#" class="small">Forgot password ?</a>
                                </div>
                            </div>
                        </div>
                    </div>

                   
                    

                </div>
            </div>
        </div>
        }
    </div>
    @Scripts.Render("~/Content/js/jquery-1.8.2.min.js")
    @Scripts.Render("~/Content/js/jquery-3.1.0.min.js")
    @Scripts.Render("~/Content/js/jquery.js")
    @Scripts.Render("~/Content/js/jquery.validate.min.js")
    @Scripts.Render("~/Content/js/jquery.validate.unobtrusive.min.js")



</body>
</html>
